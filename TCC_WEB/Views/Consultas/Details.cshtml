@model TCC_WEB.Models.Consulta

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Consulta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Médico)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Médico)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.horario)
        </dt>
		<dd>
			@if (Model.horario.ToString().Equals("seteam"))
			{
				@Html.Raw("7:00AM");
			}
			else if (Model.horario.ToString().Equals("oitoam"))
			{
				@Html.Raw("8:00AM");
			}
			else if (Model.horario.ToString().Equals("noveam"))
			{
				@Html.Raw("9:00AM");
			}
			else if (Model.horario.ToString().Equals("dezam"))
			{
				@Html.Raw("10:00AM");
			}
			else if (Model.horario.ToString().Equals("onzeam"))
			{
				@Html.Raw("11:00AM");
			}
			else if (Model.horario.ToString().Equals("dozeam"))
			{
				@Html.Raw("12:00AM");
			}
			else if (Model.horario.ToString().Equals("umapm"))
			{
				@Html.Raw("01:00PM");
			}
			else if (Model.horario.ToString().Equals("duaspm"))
			{
				@Html.Raw("02:00PM");
			}
			else if (Model.horario.ToString().Equals("trespm"))
			{
				@Html.Raw("03:00PM");
			}
			else if (Model.horario.ToString().Equals("quatropm"))
			{
				@Html.Raw("04:00PM");
			}
			else if (Model.horario.ToString().Equals("cincopm"))
			{
				@Html.Raw("05:00PM");
			}
		</dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ConsultaId">Editar</a> |
    <a class="btn btn-primary" asp-action="Index">Voltar ao Index</a>
</div>
