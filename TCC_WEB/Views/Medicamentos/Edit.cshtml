@model TCC_WEB.Models.Medicamento

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Medicamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicamentoId" />
            <div class="form-group">
                <label asp-for="NomeGenerico" class="control-label"></label>
                <input asp-for="NomeGenerico" class="form-control" />
                <span asp-validation-for="NomeGenerico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomedeFabrica" class="control-label"></label>
                <input asp-for="NomedeFabrica" class="form-control" />
                <span asp-validation-for="NomedeFabrica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fabricante" class="control-label"></label>
                <input asp-for="Fabricante" class="form-control" />
                <span asp-validation-for="Fabricante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Voltar ao Index</a>
</div>

