@model TCC_WEB.ViewModel.LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" asp-controller="Home" method="post">
	<div class="container-fluid">

		<div class="row">
			<div class="form-group col-sm-3">
				<div class="input-group">
					<label class="input-group-addon" asp-for="UserName"></label>
					<input input="text" class="form-control" placeholder="UserName" asp-for="UserName" />
				</div>
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>
		</div>


		<div class="row">
			<div class="form-group col-sm-3">
				<div class="input-group">
					<label class="input-group-addon" asp-for="Password"></label>
					<input input="text" class="form-control" placeholder="Password" asp-for="Password" />
				</div>
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
		</div>


			<div class="form-group col-sm-12">
				<button type="submit" class="btn btn-primary">Logar</button>
			</div>

		</div>

</form>