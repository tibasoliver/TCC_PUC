@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "MostrarUsers";
}

<h2>Usuários</h2>

<div class="form-group col-sm-12 ">
	<div class="form-group col-sm-12 ">
		<a  asp-controller="Home" asp-action="Registro" class="btn btn-primary">Adicionar Usuário</a>
	</div>
</div>

	@if (Model.Any())
	{

		@foreach (var user in Model)
		{
			<div class="form-group col-sm-6 ">
				<div class="col-sm-12 alert alert-success ">
					User Id: @user.Id
					<br />
					UserName:@user.UserName

					<br><br>
					<div>
						<form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
							<a asp-action="EditUser" asp-controller="Home"
							   asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
							<button type="submit" class="btn btn-danger"
								 onclick="return confirm('Are you sure toy want to delete user: @user.UserName')">
							Delete</button>
						</form>
					</div>
					<div>
						&ensp;&ensp;
					</div>
				</div>
			</div>




		}
	}

