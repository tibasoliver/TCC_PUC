@model IEnumerable<TCC_WEB.Models.Paciente>

@{
	ViewData["Title"] = "Index";
}

<h2>Pacientes</h2>

<p>
	<a class="btn btn-primary" asp-action="Create">Criar Novo</a>
</p>

<form asp-action="Index" asp-controller="Pacientes" method="post">

	<div class="input-group col-sm-2">
		<input class="form-control col-sm-2" name="txtProcurar" />
		<button type="submit" class="btn btn-outline-dark col-sm-3"><i class="fas fa-search-plus"></i></button>
	</div>

</form>

&ensp;

<div class="table-responsive ">
	<table class="table table-dark table-bordered">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.SobreNome)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Idade)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SobreNome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Idade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					<table class=" table-borderless table-hover">
						<tr>
							<th>
								<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.PacienteId">Editar</a>
							</th>
							<th>
								&ensp;
							</th>
							<th>
								<a class="btn btn-success" asp-action="Details" asp-route-id="@item.PacienteId">Detalhes</a>
							</th>
							<th>
								&ensp;
							</th>
							<th>
								<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PacienteId">Deletar</a>
							</th>
						</tr>
					</table>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>
